<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royal_blue">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        app:layout_heightPercent="50%"
        app:layout_marginBottomPercent="8%"
        app:layout_widthPercent="50%"
        app:srcCompat="@drawable/aces_image" />

    <Button
        android:id="@+id/cancelRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="5%"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/red"
        android:textSize="16dp"
        android:text="CANCEL RIDE" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="8%"
        android:text="Do not cancel your ride once picked up."
        android:fontFamily="@font/animo_light"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        android:layout_marginLeft="40dp"
        app:srcCompat="@drawable/request_title" />

    <TextView
        android:id="@+id/eta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="20%"
        android:text="@string/eta"
        android:fontFamily="@font/animo_light"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        app:layout_marginTopPercent="35%"
        android:layout_centerHorizontal="true"
        android:text="@string/data"
        android:fontFamily="@font/animo_light"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="30%"
        app:layout_marginLeftPercent="50%"
        app:srcCompat="@drawable/line" />

</android.support.percent.PercentRelativeLayout>