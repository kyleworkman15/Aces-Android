<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royal_blue">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        app:layout_heightPercent="50%"
        app:layout_marginBottomPercent="8%"
        app:layout_widthPercent="50%"
        app:srcCompat="@drawable/aces_image" />

    <Button
        android:id="@+id/cancelRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="5%"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/red"
        android:textSize="16sp"
        android:text="CANCEL RIDE" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="8%"
        android:text="Do not cancel your ride once picked up."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        android:layout_marginLeft="40dp"
        app:srcCompat="@drawable/request_title" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:layout_marginBottomPercent="50%"
        android:layout_below="@+id/imageView5"
        app:srcCompat="@drawable/request_data" />

    <TextView
        android:id="@+id/etaLbl"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="27%"
        app:layout_marginLeftPercent="9.7%"
        android:text="ETA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/eta"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_marginTopPercent="33.5%"
        app:layout_marginLeftPercent="4.7%"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="27%"
        app:layout_marginLeftPercent="35%"
        android:text="Start: "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="32.5%"
        app:layout_marginLeftPercent="35%"
        android:text="End: "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="38%"
        app:layout_marginLeftPercent="35%"
        android:text="Vehicle: "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

</android.support.percent.PercentRelativeLayout>