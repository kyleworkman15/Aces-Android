<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royal_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_marginBottomPercent="5%"
        app:layout_marginRightPercent="15%"
        app:layout_marginLeftPercent="5%"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="90%">

    </com.google.android.gms.common.SignInButton>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="60%"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/aces_image" />

    <ProgressBar
        android:id="@+id/ctrlActivityIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateOnly="true"
        android:keepScreenOn="true" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoSizeTextType="uniform"
        android:text="@string/aces_long_name"
        android:textAlignment="center"
        android:textColor="@color/royal_blue"
        android:textSize="36sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/gold"
        app:layout_marginTopPercent="8%" />

    <TextView
        android:id="@+id/privacyView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:linksClickable="true"
        android:text="By sigining in, you agree to our Privacy Policy"
        android:textColor="@color/pink"
        android:textSize="14sp"
        app:layout_marginBottomPercent="0%"
        app:layout_heightPercent="5%" />

    <Button
        android:id="@+id/about_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_heightPercent="6.5%"
        app:layout_widthPercent="10%"
        android:layout_alignTop="@id/google_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="-2dp"
        app:layout_marginRightPercent="5%"
        android:textSize="14sp"
        android:text="?" />

</android.support.percent.PercentRelativeLayout>
