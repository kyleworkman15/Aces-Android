<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.augustana.teamaardvark.acesaardvark.AboutPageActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:autoSizeTextType="uniform"
        android:text="Augustana College Express Service"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="159dp"
        android:layout_marginStart="161dp"
        android:autoSizeTextType="uniform"
        android:text="(ACES)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/purpose_title"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="Purpose:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/purpose_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/purpose_text"
        android:layout_width="291dp"
        android:layout_height="88dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:text="To provide safe transportation around campus for students. We strive to make ACES a fun and safe option to get across campus, most importantly to prevent students from walking alone at night."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/hours_title"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="93dp"
        android:text="Hours:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hours_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purpose_title" />

    <TextView
        android:id="@+id/hours_text"
        android:layout_width="291dp"
        android:layout_height="88dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="27dp"
        android:text="Monday - Thursday : 7pm-1:50am \nFriday: \nSaturday: \nSunday:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purpose_text" />

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:text="Phone:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/phone_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hours_title" />

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="291dp"
        android:layout_height="23dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="26dp"
        android:text="309-794-7550"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hours_text" />

</android.support.constraint.ConstraintLayout>
