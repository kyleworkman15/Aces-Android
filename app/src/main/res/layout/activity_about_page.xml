<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.augustana.teamaardvark.acesaardvark.AboutPageActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:autoSizeTextType="uniform"
        android:text="@string/aces_long_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="159dp"
        android:layout_marginStart="161dp"
        android:autoSizeTextType="uniform"
        android:text="@string/aces_with_parentheses"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/purpose_title"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:text="@string/purpose_title"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/purpose_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/purpose_text"
        android:layout_width="257dp"
        android:layout_height="88dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/purpose_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/hours_title"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="93dp"
        android:text="@string/hours"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hours_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purpose_title" />

    <TextView
        android:id="@+id/hours_text"
        android:layout_width="257dp"
        android:layout_height="55dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="27dp"
        android:text="@string/hours_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purpose_text" />

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="57dp"
        android:text="@string/phone"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/phone_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hours_title" />

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="257dp"
        android:layout_height="23dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="26dp"
        android:text="@string/phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hours_text" />

    <TextView
        android:id="@+id/credit_title"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:text="Credit:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/credit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_title" />

    <TextView
        android:id="@+id/credit_text"
        android:layout_width="257dp"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="27dp"
        android:text="Aardvark Image: Courtesy of Abraham Williams (CC BY-SA 2.0)\nACES Logo: Courtesy of ACES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_text" />

    <TextView
        android:id="@+id/devTeam_title"
        android:layout_width="68dp"
        android:layout_height="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:text="Dev Team:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/devTeam_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credit_title" />

    <TextView
        android:id="@+id/devTeam_text"
        android:layout_width="257dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="27dp"
        android:text="Kevin Barbian, Megan Janssen\nTan Nguyen, Tyler May"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credit_text" />

</android.support.constraint.ConstraintLayout>
