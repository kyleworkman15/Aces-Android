<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="BACK" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="ACES is currently offline" />


    <TextView
        android:id="@+id/hours_title"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_alignBaseline="@+id/hours_text"
        android:layout_alignBottom="@+id/hours_text"
        android:layout_alignStart="@+id/imageView"
        android:text="@string/hours"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hours_text"
        android:layout_width="200dp"
        android:layout_height="88dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="40dp"
        android:text="@string/hours_text" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@+id/logout_btn"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/aardvark" />
</RelativeLayout>