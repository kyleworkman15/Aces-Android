<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/request_ride_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorGreen"
        android:text="@string/request_ride" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/request_ride_btn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        tools:context="com.augustana.teamaardvark.acesaardvark.GoogleMapsActivity" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_Start"
        android:layout_width="335dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:textSize="15dp"
        android:background="@color/white"
        android:hint="Start Location"
        android:textColorHint="@color/darkGray"
        android:padding="8dp"
        android:completionThreshold="1"/>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_End"
        android:layout_width="335dp"
        android:layout_height="47dp"
        android:layout_alignStart="@+id/autoCompleteTextView_Start"
        android:layout_below="@+id/autoCompleteTextView_Start"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:background="@color/white"
        android:hint="End Location"
        android:textColorHint="@color/darkGray"
        android:padding="8dp"
        android:completionThreshold="1"
        />

    <EditText
        android:id="@+id/editTextNumRiders"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/request_ride_btn"
        android:layout_alignBottom="@+id/request_ride_btn"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/num_riders"
        android:background="@color/white"
        android:ems="10"
        android:inputType="number"
        android:elevation="100dp"
        android:text="1"/>

    <TextView
        android:id="@+id/num_riders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextNumRiders"
        android:layout_alignStart="@+id/autoCompleteTextView_End"
        android:layout_alignTop="@+id/editTextNumRiders"
        android:text="# of Riders: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="100dp"/>

    <Button
        android:id="@+id/dumbbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/request_ride_btn"
        android:background="@color/gray"
        android:text=""
        android:clickable="false" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dumbbtn"
        android:layout_alignStart="@+id/num_riders"
        android:layout_marginBottom="23dp"
        android:text="Estimated Wait Time" />

    <TextView
        android:id="@+id/pendingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/dumbbtn"
        android:text="PENDING" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/autoCompleteTextView_Start"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/autoCompleteTextView_End"
        android:background="@drawable/green_dot"
        android:elevation="100dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/autoCompleteTextView_End"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/autoCompleteTextView_End"
        android:background="@drawable/red_dot"
        android:elevation="100dp" />

</RelativeLayout>

